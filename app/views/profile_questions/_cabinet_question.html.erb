<div class="panel panel-default no_img">
  <div role="button" class="slide_accordion collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= cabinet_question.id %>" aria-expanded="false" aria-controls="collapse<%= cabinet_question.id %>">
    <div class="panel-heading clearfix <%= 'pointed' unless cabinet_question.answered? %>" role="tab" id="heading<%= cabinet_question.id %>">
      <div class="panel_info">
        <div class="panel_info_title">
          <%= auto_link(cabinet_question.body, html: { target: '_blank', class: 'pink_link' }) %>
        </div>
        <div class="panel_info_name_date clearfix">
          <span class="panel_info_date"><%= cabinet_question.created_at.strftime("%B #{cabinet_question.created_at.day.ordinalize}, %Y %I:%M %p") %></span>
        </div>
      </div>
    </div>
  </div>
  <% if cabinet_question.answer.present? %>
    <%= render '/profile_questions/answer', cabinet_question: cabinet_question, opened: false %>
  <% else %>
    <%= render '/profile_questions/answer_form', cabinet_question: cabinet_question  %>
  <% end %>
  <a href="#" class="close_accordion_item"><i class="icon icon_arrow_up"></i></a>
</div>
