<div id="collapse<%= request.id %>" class="panel-collapse collapse <%= opened ? 'in' : '' %>" role="tabpanel" aria-labelledby="heading<%= request.id %>">
  <div class="panel-body">
    <div class="answer_block">
      <div class="answer_title hidden-xs">ANSWER</div>
      <div class="panel_info_name_date clearfix">
        <span class="panel_info_date"><%= activity_time_at(request.answer.created_at) %></span>
      </div><br/>
      <div class="answer_text">
        <%= auto_link(request.answer_body, html: { target: '_blank', class: 'pink_link' }) %>
      </div>
    </div>
  </div>
</div>