<div class="sign_up_form">
  <h3 class="sign_up_form_title">Please, enter your email</h3>
  <div class="sign_up_form_subtitle">Weâ€™ll send you a link to create new password</div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, remote: true) do |f| %>
    <div class="form_body form_body_padd">
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control input_styled', placeholder: 'Email', autofocus: true %>
      </div>
    </div>
    <%= f.submit 'RESET PASSWORD', class: 'btn btn_default btn_black' %>
  <% end %>
  <div class="sign_up_bot_text marg_top_md">
    <%= link_to 'Go Back', new_user_session_path, class: 'link_sm go_back_link' %>
  </div>
</div>