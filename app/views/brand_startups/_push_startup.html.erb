<div class="tip_holder right">
  <div class="tip_head">
    SELECT A STARTUP
  </div>
  <% if @brand.brand_startups.size >= @brand.package.number_startups%>
    <div class="tip_warning">
      BRAND REACHED STARTUP LIMIT
    </div>
  <% end %>
  <div class="tip_body custom_scroll">
    <div class="tip_search">
      <div class="input-group">
        <span class="input-group-btn">
          <i class="icon icon_search"></i>
        </span>
        <%= form_for :startup, url: search_startups_path, method: :get, remote: true do |f| %>
          <%= hidden_field_tag :brand_id, @brand.id %>
          <%= f.text_field :query, class: 'form-control simple_search', placeholder: 'Search for startup' %>
        <% end %>
      </div>
      <span class="clear_tip_search">X</span>
    </div>
    <%= render 'startups/search_list' %>
  </div>
  <div class="tip_group_btns clearfix">
    <button class="btn btn_default btn_gray btn_tip_cancel">CANCEL</button>
    <%= button_tag(class: 'btn btn_default btn_black btn_tip_add btn_loader', type: :button) do %>
      <span>PUSH STARTUP</span> <i class="icon icon_mark"></i>
      <%= render '/layouts/loader' %>
    <% end %>
  </div>
</div>

