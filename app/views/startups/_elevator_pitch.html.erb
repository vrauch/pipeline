        <% @startup.pdf_documents.not_tmp.each do |pdf| %>
          <div class="col-sm-6">
            <div class="file_link_wrap">
              <%= link_to pdf.file.url, class: 'file_link', target: '_blank' do %>
                <i class="icon icon_upload_file"></i><%= pdf.original_filename %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
