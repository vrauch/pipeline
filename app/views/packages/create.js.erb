<% if @package.errors.any? %>
  $("#package-form").html("<%= j(render 'form') %>")
<% else %>
  $(".package_holder").prepend("<%= j render 'package', package: @package %>")

  setTimeout(function(){
    $('.btn_show_mark').addClass('active');
  }, 500);
  setTimeout(function(){
    $('.slide-panel').removeClass('is-visible');
    $('body').css('overflow-y', 'auto');
    $('.btn_show_mark').removeClass('active');
    $("#notification").html("<%= j(render('layouts/flash_message')) %>");
    $('.top_notification').showFlashMessage();
  }, 1500);
  
<% end %>