<div class="preview_block">
  <div class="row">
    <div class="col-sm-3 preview_block_left">
      <div class="default_upload_file_holder">
				<div class="default_upload_file<%= f.object.logo? ? ' active' : '' %>">
					<div id="scorecard_logo_preview" class="inner scorecard_logo_preview" style="overflow: hidden; overflow: hidden; background-image: url(<%= @scorecard.logo.url if @scorecard.logo? %>)">
            <%# image_tag(@scorecard.logo, style: upload_img_style(@scorecard.logo_dimensions, 168, 148)) if @scorecard.logo?  %>
            <%= f.file_field :logo, class: 'upload_img', accept: 'image/png,image/jpeg' %>
            <%= f.hidden_field :logo_cache %>
					</div>
          <div class="progress_holder" id="upload_step" style="display:none;">
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                <span class="sr-only"></span>
              </div>
            </div>
            <div class="progress_text">uploading</div>
          </div>
					<div class="upload_text visible_before"><i class="icon icon_arrow_up_round"></i>
						UPLOAD LOGO
						<div class="help_text">recommended size 200 x 200 px</div>
					</div>
					<div class="upload_text visible_after"><i class="icon icon_arrow_up_round"></i>
						CHANGE LOGO
						<div class="help_text">recommended size 200 x 200 px</div>
					</div>
				</div>
			</div>
    </div>
    <div class="col-sm-9 preview_block_right">
      <h2><%= @scorecard.title_fv %></h2>
      <%= f.hidden_field :title %>

      <div class="editable info_item_wide">
        <p class="desc_text editable_text">
          <span class="hidden_input_value">
            <%= @scorecard.description_fv %>
          </span>
          <span class="hidden_input_block">
            <span class="limit_text"><%= sc_limit_text(:description, @scorecard.description) %></span>
            <%= f.text_area :description, class: 'hidden_input',
                  placeholder: 'Type copy here…',
                  data: {
                    default_val: f.object.description,
                    max_length: Scorecard.max_length_of(:description)
                  } %>
          </span>
        </p>
        <a href="#" class="edit_link"><i class="icon icon_edit"></i> Edit</a>
      </div>
      <div class="row">
        <div class="col-sm-8">

          <div class="editable info_item_wide">
            <p class="site_text editable_text">
              <span class="hidden_input_value"><%= @scorecard.website_fv %></span>
              <span class="hidden_input_block">
                <span class="limit_text"><%= sc_limit_text(:website, @scorecard.website) %></span>
                <%= f.text_field :website, class: 'hidden_input',
                      placeholder: 'Type copy here…',
                      data: {
                        default_val: f.object.website,
                        max_length: Scorecard.max_length_of(:website)
                      } %>
              </span>
            </p>
            <a href="#" class="edit_link"><i class="icon icon_edit"></i> Edit</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
