<% if section_type.to_i == ps_type_number(:problem_startup_solves) %>
  <div class="col-sm-6">
    <%= info_item(f, :problem_startup_solves, 'PROBLEM STARTUP SOLVES') do %>
      <% concat(f.text_area :problem_startup_solves,
          class: 'hidden_input',
          rows: 5,
          placeholder: 'Type copy here…',
          data: {
            default_val: f.object.problem_startup_solves,
            max_length: Scorecard.max_length_of(:problem_startup_solves)
          }) %>
    <% end %>
  </div>
<% elsif section_type.to_i == ps_type_number(:how_it_works) %>
  <div class="col-sm-6">
    <%= info_item(f, :how_it_works, 'HOW IT WORKS') do %>
      <% concat(f.text_area :how_it_works, class: 'hidden_input',
          rows: 5,
          placeholder: 'Type copy here…',
          data: {
            default_val: f.object.how_it_works,
            max_length: Scorecard.max_length_of(:how_it_works)
          }) %>
    <% end %>
  </div>
<% elsif section_type.to_i == ps_type_number(:product_image) && side == 'left' %>
  <div class="col-sm-6">
    <div class="wide_img_upload">
      <div class="default_upload_file_holder">
        <div class="default_upload_file<%= f.object.product_image? ? ' active' : '' %>">
          <div id="scorecard_product_image_preview" class="inner scorecard_product_image_preview" style="overflow: hidden; background-image: url(<%= @scorecard.product_image.url if @scorecard.product_image? %>)">
            <%# f.file_field :logo, class: 'upload_img', accept: 'image/png,image/jpeg' %>
            <%= f.file_field :product_image, class: 'upload_img', accept: 'image/png,image/jpeg' %>
            <%= f.hidden_field :product_image_cache %>
          </div>
          <div class="progress_holder" id="upload_step" style="display:none;">
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                <span class="sr-only"></span>
              </div>
            </div>
            <div class="progress_text">uploading</div>
          </div>
          <div class="upload_text visible_before"><i class="icon icon_arrow_up_round"></i>
            UPLOAD IMAGE
            <div class="help_text">recommended size <br> 480 x 190 px</div>
          </div>
          <div class="upload_text visible_after"><i class="icon icon_arrow_up_round"></i>
            CHANGE IMAGE
            <div class="help_text">recommended size <br> 480 x 190 px</div>
          </div>
        </div>
      </div>
    </div>
    <%= info_item(f, :product_image_title) %>
  </div>
<% elsif section_type.to_i == ps_type_number(:product_image) && side == 'right' %>
  <div class="col-sm-6">
    <div class="wide_img_upload">
      <div class="default_upload_file_holder">
        <div class="default_upload_file<%= f.object.rs_product_image? ? ' active' : '' %>">
          <div id="scorecard_rs_product_image_preview" class="inner scorecard_product_image_preview" style="overflow: hidden; background-image: url(<%= @scorecard.rs_product_image.url if @scorecard.rs_product_image? %>)">
            <%= f.file_field :rs_product_image, class: 'upload_img', accept: 'image/png,image/jpeg' %>
            <%= f.hidden_field :rs_product_image_cache %>
          </div>
          <div class="progress_holder" id="upload_step" style="display:none;">
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                <span class="sr-only"></span>
              </div>
            </div>
            <div class="progress_text">uploading</div>
          </div>
          <div class="upload_text visible_before"><i class="icon icon_arrow_up_round"></i>
            UPLOAD IMAGE
            <div class="help_text">recommended size <br> 480 x 190 px</div>
          </div>
          <div class="upload_text visible_after"><i class="icon icon_arrow_up_round"></i>
            CHANGE IMAGE
            <div class="help_text">recommended size <br> 480 x 190 px</div>
          </div>
        </div>
      </div>
    </div>
      <%= info_item(f, :rs_product_image_title) %>
  </div>
<% end %>
