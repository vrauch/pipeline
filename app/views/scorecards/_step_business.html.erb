<%= form_for @scorecard, remote: true do |f| %>
  <div class="slide-panel-container">
    <div class="slide-panel-content slide-panel-content_pb">
      <ul class="step_name_list lg_size step_name_list_padd clearfix">
        <li class="pull-left name_main_step">SCORECARD GENERATOR</li>
        <li>TEMPLATE</li>
        <li>OVERVIEW</li>
        <li>PRODUCT</li>
        <li>COLLABORATION</li>
        <li class="active">BUSINESS</li>
        <li>RECOMMENDATION</li>
      </ul>
      <h1 class="h1_title">Business Alignment</h1>
      <div class="subtitle">How well does the startup solve the identified corporate challenges?</div>
      <%= render 'partials/error_messages', resource: @scorecard, disable_titles: true %>

      <div class="grid_padding_xs form_container sc_questions_list">

        <%= render 'scorecards/questions', questions: @scorecard_questions %>

        <div class="total_score total_score_mb">
          TOTAL SCORE:
          <span class="sc_total_score"><%= business_total_score %></span>/10
        </div>
      </div>

    </div> <!-- slide-panel-content -->
  </div> <!-- slide-panel-container -->
  <div class="bot_control_btns fixed_control_btns">
    <div class="row">
      <div class="col-xs-12 text-center more_control_btns">
        <%= render 'back_link' %>
        <%= button_tag @scorecard.complete? || @scorecard.sent? ? 'SAVE' : 'SAVE DRAFT', type: 'submit', class: 'control_link btn_open_panel',
                       name: 'save' %>
        <%= button_tag type: 'submit', class: 'control_link btn_open_panel' do %>
          NEXT <i class="icon icon_arrow_right"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
