<div class="sidebar_details">
  <div class="inner_scroll">
    <div class="sidebar_detail_head">
      <%= link_to session[:back_referer] ? session[:back_referer] : brands_path, class:'link_nav' do %>
        <span class="hidden-xs">BACK</span><i class="icon icon_close visible-xs"></i>
      <% end %>
      <a href="javascript:;" class="sidebar_ava">
        <%= @brand.logo.thumb_medium.present? ? image_tag(@brand.logo.thumb_medium, width: 90) : image_tag("layout/user_mask.png", alt: "") %>
      </a>
      <h2 class="sidebar_title"><%= @brand.title %></h2>
      <div class="sidebar_subtitle hidden-xs"><%= @brand.package ? @brand.package.name : 'undefined' %></div>
      <div>
        <a href="#" class="btn btn_bordered_rounded visible-xs-inline-block hide_show_details">View Details</a>
      </div>
    </div>
    <div class="sidebar_detail_body">
      <div class="inner">
        <ul class="tool_bar two_elements clearfix hidden-xs">
          <!--<li class="tool_bar_li"><a href="#"><i class="icon icon_scorecard"></i><span>SEND SCORECARD</span></a></li>-->
          <li class="tool_bar_li show_tip push_startup_to_brand">
            <%= link_to new_brand_startup_path(@brand), remote: true do %>
              <i class="icon icon_push"></i><span>PUSH STARTUP</span>
            <% end %>
          </li>
        </ul>
        <div class="detail_item">
          <div class="detail_item_title">DESCRIPTION</div>
          <div class="detail_item_content">
            <%= auto_link(simple_format(@brand.description), html: { target: '_blank', class: 'sidebar_link' }) %>
          </div>
        </div>
        <div class="detail_item">
          <div class="detail_item_title">DETAILS</div>
          <div class="detail_item_content">
            <ul class="detail_list">
              <li><span>Package:</span> <%= @brand.package ? @brand.package.name : 'undefined' %></li>
              <li><span>Location:</span> <%= @brand.location %></li>
              <li>
                <span>Website:</span>
                <% if @brand.site? %>
                  <%= link_to @brand.site, "//#{@brand.site}", class: 'sidebar_link', target: '_blank' %>
                <% else %>
                  <span class="some-transparency">none specified</span>
                <% end %>
              </li>
              <li><span>Contact Name:</span> <%= @brand.contact_name %></li>
              <li><span>Contact Position:</span> CMO</li>
              <li><span>Contact Email:</span> <%= @brand.contact_email %></li>
            </ul>
          </div>
        </div>
        <% if @brand.point_of_contact %>
        <div class="detail_item">
          <div class="detail_item_title">BRAND POINT OF CONTACT</div>
          <div class="detail_item_content">
            <div class="user_details">
                <div class="user_details_img">
                  <%= image_tag(@brand.point_of_contact.photo.present? ? @brand.point_of_contact.photo.thumb_small : 'layout/user_white.png', width: '43') %>
                </div>
                <div class="user_details_info">
                  <div><%= @brand.point_of_contact.full_name %></div>
                </div>
            </div>
          </div>
        </div>
        <% end %>
        <ul class="profile_info_list">
          <li>
            Profile Created on <%= @brand.created_at.strftime('%m/%d/%Y') %>
          </li>
          <% if @brand.updator %>
            <li>
              Last Edited on <%= @brand.updated_at.strftime('%m/%d/%Y') %>  by
              <%= @brand.updator.full_name %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
