<div class="row">
  <div class="col-xs-12 block_for_upload" style="margin-bottom: 70px;">
    <div class="default_upload_file_holder">
      <div class="default_upload_file lg_size apsolute <%= !f.object.inspire_video? && f.object.inspire_image? ? 'active' : '' %>">
        <% if f.object.inspire_video? && f.object.image_video? %>
          <% image = f.object.image_video.url %>
        <% elsif f.object.inspire_image? %>
          <% image = f.object.inspire_image.thumb_large.url %>
        <% end %>
        <div class="inner inspire-image-preview-image" style="<%= image ? "background-image: url(#{asset_path image}?#{rand(1...100).to_f/rand(10...1000)})" : ''%>">
          <% unless f.object.inspire_video? %>
            <%= f.file_field :inspire_image, class: 'upload_img inspire-image-input' %>
            <%= f.hidden_field :inspire_image_cache, class: 'hidden_inspire_image_cache' %>
          <% end %>
        </div>
        <div class="progress_holder" id="upload_step" style="display:none;">
          <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:0%">
              <span class="sr-only"></span>
            </div>
          </div>
          <div class="progress_text">uploading</div>
        </div>
        <div class="upload_text visible_before"><i class="icon icon_arrow_up_round"></i>
          COVER IMAGE
        </div>
        <div class="upload_text visible_after"><i class="icon icon_arrow_up_round"></i>
          CHANGE
        </div>
      </div>
      <div class="add_video">
        <span><i class="icon icon_arrow_up_round"></i>or add video</span>
      </div>
      <div class="add_vid_hidden_block">
        <div class="inner">
          <%= f.text_field :inspire_video, class: 'form-control inspire-video', placeholder: '' %>
          <a href="#" class='delete_video remove-video'><i class="icon icon_delete"></i></a>
          <a href="#" class="btn btn_bordered_const md_size upload-video btn_loader">
            Upload video
            <%= render '/layouts/loader' %>
          </a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.text_field :inspire_title, class: 'form-control', placeholder: 'Section Title' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.text_area :inspire_description, class: 'form-control',
                          style: 'height: 211px;', autocomplete: :off,
                          placeholder: 'Section Description' %>
        </div>
      </div>
    </div>
  </div>
</div>