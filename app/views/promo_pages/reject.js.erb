$("#promo_page_<%= @promo_page.id %>").html("<%= j(render('promo_page', promo_page: @promo_page)) %>");
<% if params[:preview] %>
  $("#promo_page_preview").find(".reject").delay(500).queue(function(){
    $(this).addClass('active');
    window.setTimeout(function () {
      $(".promo_page_preview").removeClass('is-visible');
      $('body').css('overflow-y', 'auto');
      $(".promo__bar--reject_text").val("")
      $.controlMethods.removePlaceholder();
      <%= render 'partials/notification' %>
    }, 1000);
  });
<% else %>
  $("#notification").html("<%= j(render('layouts/flash_message')) %>");
  $('.top_notification').addClass('sm_size').showFlashMessage();
  $.controlMethods.removePlaceholder();
<% end %>
